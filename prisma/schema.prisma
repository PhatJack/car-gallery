generator client {
  provider = "prisma-client"
  output   = "./generated"
}

datasource db {
  provider = "postgresql"
}

model Car {
	id        String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
	make      String
	model     String
	year      Int
	description String
	image     String
	createdAt DateTime @default(now())
	updatedAt DateTime @updatedAt
}